<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to ElderlyApp!"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ElderlyApp is designed to make life easier for the elderly. With features like medicine identification, we aim to provide a helpful tool for daily life."
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/elderly_phone"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>
